<main>




    <div class="mt-10 sm:mt-0">
      <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
          <div class="px-10 sm:px-0">
            <h3 class=""> Actualizar Info del cliente </h3>
           
            <img src="imagenes/corinne-kutz-tMI2_-r5Nfo-unsplash.jpg" alt="" class="imagen">
          </div>
        </div>

        <div class="formulario">
        <div class="mt-5 md:mt-0 md:col-span-2">
          <form action="/update/<%= data.id %>" method="POST">
            <div class="shadow overflow-hidden sm:rounded-md">
              <div class="px-4 py-5 bg-white sm:p-6">
                <div class="grid grid-cols-6 gap-6">
                  <div class="col-span-6 sm:col-span-3">
                    <label for="first-name" class="block text-sm font-medium text-gray-700"> Nombre completo  </label>
                    <input type="text" name="nombre" id="nombre" value="<% data.nombre %>" autocomplete="nombre-name"
                      class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                  </div>


                  <div class="col-span-6 sm:col-span-3">
                    <label for="job" class="block text-sm font-medium text-gray-700"> Cargo </label>
                    <input type="text" name="cargo" id="cargo" value="<% data.cargo %>" autocomplete="cargo-name"
                      class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                  
                    
                </div>


        
                  <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                    <label for="city" class="block text-sm font-medium text-gray-700">  Edad del empleado</label>
                    <input type="number" name="edad" id="edad" value="<% data.edad %>" autocomplete="edad-level2"
                      class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                  </div>

                  <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                    <label for="region" class="block text-sm font-medium text-gray-700"> Peso del empleado </label>
                    <input type="number" name="peso" id="peso" value="<% data.peso %>" autocomplete="peso-level1"
                      class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                  </div>

                  <div class="col-span-6 sm:col-span-3 lg:col-span-2">
                    <label for="postal-code" class="block text-sm font-medium text-gray-700"> Altura del empleado </label>
                    <input type="altura" name="altura" id="altura" value="<% data.altura %>" autocomplete="altura"
                      class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
                  </div>
                </div>
              </div>
              <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                <button type="submit"
                  class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"> Actualizar Info</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>
